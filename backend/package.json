{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "main": "dist/Server.js",
    "scripts": {
        "build": "tsc",
        "dev": "nodemon",
        "start:dev": "ts-node src/Server.ts",
        "start": "node dist/Server.js",
        "test:unit": "jest unit --detectOpenHandles --colors --forceExit",
        "test:int": "jest int --detectOpenHandles --colors --forceExit",
        "test:unit:watch": "jest --watch unit --detectOpenHandles --colors",
        "format": "prettier --write */**/*.{ts,tsx}",
        "lint": "eslint --quiet --fix */**/*.{ts,tsx}",
        "ci:type-errors": "tsc --noEmit",
        "ci:lint": "eslint '*/**/*.{ts,tsx}' --quiet"
    },
    "author": "Alexander Kilroy",
    "license": "ISC",
    "devDependencies": {
        "@shelf/jest-mongodb": "1.1.5",
        "@types/bcrypt": "3.0.0",
        "@types/body-parser": "1.19.0",
        "@types/cors": "2.8.6",
        "@types/express": "4.17.3",
        "@types/jest": "25.2.2",
        "@types/jsonwebtoken": "8.5.0",
        "@types/mongodb": "3.5.16",
        "@types/node": "13.9.0",
        "@types/supertest": "2.0.9",
        "@typescript-eslint/eslint-plugin": "3.0.2",
        "@typescript-eslint/eslint-plugin-tslint": "3.0.2",
        "@typescript-eslint/parser": "3.0.2",
        "eslint": "7.1.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-prettier": "3.1.3",
        "husky": "4.2.5",
        "jest": "26.0.1",
        "jest-junit": "10.0.0",
        "lint-staged": "10.2.7",
        "nodemon": "2.0.2",
        "prettier": "2.0.5",
        "supertest": "4.0.2",
        "ts-jest": "26.0.0",
        "ts-node": "8.6.2",
        "tslint": "6.1.2",
        "typescript": "3.8.3"
    },
    "dependencies": {
        "bcrypt": "4.0.1",
        "body-parser": "1.19.0",
        "chalk": "4.0.0",
        "cors": "2.8.5",
        "dotenv": "8.2.0",
        "express": "4.17.1",
        "jsonwebtoken": "8.5.1",
        "loglevel": "1.6.8",
        "mongodb": "3.5.7",
        "rxjs": "6.5.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run test:unit"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "engines": {
        "node": "13.9.0"
    }
}
